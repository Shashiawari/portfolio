<%- include('header') %>
<form action="/contact" method="post">
    <div class="container">
        <div class="row p-5">
            <h2 class="exo mb-5">Contact me</h2>
            <div class="col-12">
                <div class="box-input">
                    <div class="border2">
                        <input type="text" name="name" class="input" placeholder="Name">
                    </div>
                </div>
            </div>
            <div class="col-12 my-3">
                <div class="box-input">
                    <div class="border2">
                        <input type="text" name="email" class="input" placeholder="Email">
                    </div>
                </div>
            </div>
            <div class="col-12 my-3">
                <div class="box-input">
                    <div class="border2">
                        <input type="text" name="query" class="input" placeholder="Enter Your Query"
                            style="height: 200px;">
                    </div>
                </div>
            </div>
            <button class="ui-btn mx-2" type="submit">Submit</button>

        </div>
    </div>
</form>
<%- include('footer') %>